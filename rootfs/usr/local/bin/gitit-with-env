#!/bin/bash

set -euo pipefail

export GHC_PACKAGE_PATH="/opt/gitit/.stack-work/install/x86_64-linux/lts-${LTS_VERSION}/${GHC_VERSION}/pkgdb:${STACK_ROOT}/snapshots/x86_64-linux/lts-${LTS_VERSION}/${GHC_VERSION}/pkgdb:${STACK_ROOT}/programs/x86_64-linux/ghc-${GHC_VERSION}/lib/ghc-${GHC_VERSION}/package.conf.d"

exec gitit "${@}"
